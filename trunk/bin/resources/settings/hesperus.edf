HENTDEF
AABBs
{
stand = ( -0.5 -0.5 -1 ) ( 0.5 0.5 1 )
crouch = ( -0.5 -0.5 -0.5 ) ( 0.5 0.5 0.5 )
}
Traits
{
Trait Collidable : Locatable
{
AABBs : [int]
Pose : int
}
Trait Locatable
{
Position : Vector3d
}
Trait Mortal
{
Health : int
}
Trait Oriented
{
Look : Vector3d
}
Trait Visible
{
GameModel : filename
}
}
Classes
{
Class Player : Collidable, Mortal, Oriented, Visible
{
AABBs = [crouch,stand]
GameModel = player.x
Health = 100
Pose = stand
}
Class Guard : Collidable, Mortal, Oriented, Visible
{
AABBs = [stand]
GameModel = guard.x
Health = 50
Pose = stand
}
}
