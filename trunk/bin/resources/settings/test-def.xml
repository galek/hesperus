<definitions>
	<objects>
		<aabbs>
			<aabb name="stand">
				<mins x="-0.5" y="-0.5" z="-1"/>
				<maxs x="0.5" y="0.5" z="1"/>
			</aabb>
			<aabb name="crouch">
				<mins x="-0.5" y="-0.5" z="-0.5"/>
				<maxs x="0.5" y="0.5" z="0.5"/>
			</aabb>
		</aabbs>
		<components>
			<component name="Collision">
				<property name="AABBs" type="[AABBid]"/>
				<property name="Pose" type="AABBid"/>
			</component>
			<component name="DirectMovement"/>
			<component name="MeshMovement"/>
			<component name="MinimusScriptYoke">
				<property name="Script" type="string"/>
			</component>
			<component name="ModelRender">
				<property name="ModelName" type="string"/>
			</component>
			<component name="Orientation">
				<property name="Look" type="Vector3d"/>
			</component>
			<component name="Physics"/>
			<component name="Position">
				<property name="Position" type="Vector3d"/>
			</component>
			<component name="ScriptedActivatable">
				<property name="Script" type="string"/>
			</component>
			<component name="UserBipedYoke"/>
		</components>
		<archetypes>
			<archetype name="Guard">
				<component name="Collision">
					<property name="AABBs" fixed="[stand,crouch]"/>
					<property name="Pose" default="stand"/>
				</component>
				<component name="MeshMovement"/>
				<component name="MinimusScriptYoke"/>
				<component name="ModelRender">
					<property name="ModelName" default="Guard"/>
				</component>
				<component name="Orientation"/>
				<component name="Physics"/>
				<component name="Position"/>
			</archetype>
			<archetype name="Player">
				<component name="Collision">
					<property name="AABBs" fixed="[stand,crouch]"/>
					<property name="Pose" default="stand"/>
				</component>
				<component name="MeshMovement"/>
				<component name="ModelRender">
					<property name="ModelName" default="Player"/>
				</component>
				<component name="Orientation"/>
				<component name="Physics"/>
				<component name="Position"/>
				<component name="UserBipedYoke"/>
			</archetype>
		</archetypes>
	</objects>
</definitions>
